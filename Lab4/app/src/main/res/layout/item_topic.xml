<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#4CAF50"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/topicToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Truyện cười"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/iconEmoji1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/cuoi1"
            android:contentDescription="@string/desc_emoji1" />

        <ImageView
            android:id="@+id/iconEmoji2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/cuoi2"
            android:contentDescription="@string/desc_emoji2" />

        <ImageView
            android:id="@+id/iconEmoji3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/cuoi3"
            android:contentDescription="@string/desc_emoji3" />

        <ImageView
            android:id="@+id/iconEmoji4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/cuoi4"
            android:contentDescription="@string/desc_emoji4" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Topic Image"
                android:scaleType="centerCrop"
                android:src="@drawable/anhtruyencuoi" />

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="#4CAF50" />

            <TextView
                android:id="@+id/itemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Học sinh"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
