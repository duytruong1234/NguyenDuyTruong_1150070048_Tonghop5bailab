<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardStyle">
        <item name="android:background">@color/background_white</item>
        <item name="android:elevation">@dimen/elevation_low</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubtitleTextStyle">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_teal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SecondaryTextStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="InputStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>
</resources>
